<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_payment_background"
    android:paddingHorizontal="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/button_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_arrow_down" />

    <TextView
        android:id="@+id/title_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_down"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/nanumsquare_acb"
        android:text="@string/payment_cash"
        android:textColor="@color/title_color"
        android:textSize="16sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_payment"
        android:background="@drawable/button_background_center"
        android:paddingHorizontal="25dp"
        android:paddingVertical="20dp">

        <!-- total_payment -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/total_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title_total_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_acb"
                android:maxLines="1"
                android:text="@string/total_product_payment"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/total_payment_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanumsquare_acb"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/zero"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_total_payment"
                app:layout_constraintEnd_toStartOf="@id/total_payment_ko_kr"
                app:layout_constraintStart_toEndOf="@id/title_total_payment" />

            <TextView
                android:id="@+id/total_payment_ko_kr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_acb"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="1dp"
                android:text="@string/ko_kr"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/total_payment_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/total_payment_price" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- delivery_payment -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/delivery_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_payment">

            <TextView
                android:id="@+id/title_delivery_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_acb"
                android:maxLines="1"
                android:text="@string/delivery_product_payment"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/delivery_payment_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanumsquare_acb"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/zero"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_delivery_payment"
                app:layout_constraintEnd_toStartOf="@id/delivery_payment_ko_kr"
                app:layout_constraintStart_toEndOf="@id/title_delivery_payment" />

            <TextView
                android:id="@+id/delivery_payment_ko_kr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_acb"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="1dp"
                android:text="@string/ko_kr"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_delivery_payment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/delivery_payment_price" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- discount_payment -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/discount_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment">

            <TextView
                android:id="@+id/title_discount_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_acb"
                android:maxLines="1"
                android:text="@string/discount_product_payment"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/discount_payment_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanumsquare_acb"
                android:gravity="end|center_vertical"
                android:maxLines="1"
                android:text="@string/zero"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/title_discount_payment"
                app:layout_constraintEnd_toStartOf="@id/discount_payment_ko_kr"
                app:layout_constraintStart_toEndOf="@id/title_discount_payment" />

            <TextView
                android:id="@+id/discount_payment_ko_kr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_acb"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="1dp"
                android:text="@string/ko_kr"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/title_discount_payment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/discount_payment_price" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/final_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="18dp"
            android:background="@color/barcode_reticle_stroke"
            app:layout_constraintTop_toBottomOf="@id/discount_payment" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/final_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/final_line">

            <TextView
                android:id="@+id/title_final_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_aceb"
                android:maxLines="1"
                android:text="@string/final_payment"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/final_payment_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanumsquare_aceb"
                android:gravity="end|center_vertical"
                android:maxLines="1"
                android:text="@string/zero"
                android:textColor="@color/final_payment"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/title_final_payment"
                app:layout_constraintEnd_toStartOf="@id/final_payment_ko_kr"
                app:layout_constraintStart_toEndOf="@id/title_final_payment" />

            <TextView
                android:id="@+id/final_payment_ko_kr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_aceb"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="1dp"
                android:text="@string/ko_kr"
                android:textColor="@color/final_payment"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_final_payment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/final_payment_price" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/goto_ar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_cash"
        android:layout_marginTop="16dp"
        android:background="@drawable/ar_button_selector"
        android:fontFamily="@font/nanumsquare_aceb"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="@string/cart_to_ar"
        android:textColor="@drawable/ar_button_text_selector" />

    <LinearLayout
        android:id="@+id/goto_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goto_ar"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/number_of_order_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_aceb"
            android:text="@string/zero"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/goto_order_kr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_aceb"
            android:text="@string/product_count_to_payment"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>