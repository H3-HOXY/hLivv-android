<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/product_item_padding"
    android:paddingTop="@dimen/product_item_padding"
    android:paddingEnd="@dimen/product_item_padding">

    <CheckBox
        android:id="@+id/item_check"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/cart_product_image"></CheckBox>

    <ImageView
        android:id="@+id/cart_product_image"
        android:layout_width="@dimen/cart_item_image_size"
        android:layout_height="@dimen/cart_item_image_size"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="@dimen/product_item_image_margin_end"
        android:layout_toEndOf="@id/item_check"
        android:backgroundTint="@color/barcode_reticle_background"
        android:contentDescription="@null" />


    <TextView
        android:id="@+id/cart_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cart_product_image"
        android:layout_toStartOf="@id/cart_delete_btn"
        android:layout_toEndOf="@id/cart_product_image"
        android:fontFamily="@font/nanumsquare_acb"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/cart_delete_btn"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/cart_product_image"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_close_vd_grey_24"></ImageView>


    <RelativeLayout
        android:id="@+id/cart_unit_price_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cart_product_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/cart_product_image">


        <TextView
            android:id="@+id/cart_product_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/unit_ko_kr"
            android:fontFamily="@font/nanumsquare_aceb"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/unit_ko_kr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/nanumsquare_aceb"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingEnd="1dp"
            android:text="@string/ko_kr"
            android:textColor="@color/title_color"
            android:textSize="@dimen/product_item_subtitle_size" />
    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cart_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_item_image_size"
        android:layout_below="@id/cart_product_image"
        android:layout_marginTop="8dp"
        android:background="@color/cart_background"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/cart_quantity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="6"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/cart_qty_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/nanumsquare_acb"
                android:maxLines="1"
                android:paddingTop="6dp"
                android:text="@string/qty_title"
                android:textColor="@color/title_color"
                android:textSize="@dimen/product_item_subtitle_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/button_background_center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cart_minus_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:paddingHorizontal="2dp"
                    android:text="@string/minus"
                    android:textAlignment="center"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/product_item_subtitle_size" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/barcode_reticle_stroke" />


                <TextView
                    android:id="@+id/cart_quantity_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:paddingHorizontal="2dp"
                    android:paddingVertical="5dp"
                    android:text="@string/default_qty"
                    android:textAlignment="center"
                    android:textColor="@color/title_color"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/barcode_reticle_stroke" />

                <TextView
                    android:id="@+id/cart_plus_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:paddingHorizontal="2dp"
                    android:text="@string/plus"
                    android:textAlignment="center"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/product_item_subtitle_size" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/cart_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_quantity_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent">

            <ImageView
                android:id="@+id/ar_supported"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_ar" />


            <TextView
                android:id="@+id/cart_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/ko_kr"
                android:fontFamily="@font/nanumsquare_aceb"
                android:maxLines="1"
                android:textColor="@color/title_color"
                android:textSize="@dimen/product_item_subtitle_size" />

            <TextView
                android:id="@+id/ko_kr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/nanumsquare_aceb"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="1dp"
                android:text="@string/ko_kr"
                android:textColor="@color/title_color"
                android:textSize="@dimen/product_item_subtitle_size" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_below="@id/cart_layout"
        android:layout_marginTop="@dimen/product_item_padding"
        android:background="@color/lighter_grey" />

</RelativeLayout>